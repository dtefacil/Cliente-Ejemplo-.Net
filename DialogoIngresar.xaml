<Window x:Class="EjemploDTEFacil.DialogoIngresar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ingresar" Height="140" Width="277" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Content="Nombre de Usuario:" Height="28" Name="usernameLabel" ToolTip="Nombre del contribuyente" Grid.Row="0"  Grid.Column="0" />
        <Label Content="Contraseña:" Height="28" Name="passwordLabel" Grid.Row="1"  Grid.Column="0" />
        <Button Content="Ingresar" Height="23" Name="login" Width="75" Grid.Column="2" Grid.Row="3" Click="login_Click" TabIndex="3" />
        <TextBox Grid.Column="1" Grid.Row="0" Height="23" Name="username" Width="120" TabIndex="1" />
        <PasswordBox Grid.Column="1" Grid.Row="1" Height="23" Name="password" Width="120" TabIndex="2"/>
    </Grid>
</Window>
